generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Clinic {
  id            String   @id @default(uuid()) @db.Uuid
  name          String
  slug          String   @unique
  addressLine1  String?
  city          String   @default("Tijuana")
  state         String   @default("BC")
  country       String   @default("MX")
  phone         String?
  whatsapp      String?
  websiteUrl    String?
  googleMapsUrl String?
  yelpUrl       String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  events        Event[]
  savedClinics  SavedClinic[]

  @@index([slug])
}

model Event {
  id        String   @id @default(uuid()) @db.Uuid
  sessionId String?
  clinicId  String?  @db.Uuid
  eventName String
  metadata  Json?
  createdAt DateTime @default(now())
  clinic    Clinic?  @relation(fields: [clinicId], references: [id], onDelete: SetNull)

  @@index([sessionId])
  @@index([clinicId])
}

model SavedClinic {
  id        String   @id @default(uuid()) @db.Uuid
  sessionId String
  clinicId  String   @db.Uuid
  createdAt DateTime @default(now())
  clinic    Clinic   @relation(fields: [clinicId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([clinicId])
  @@unique([sessionId, clinicId])
}
