generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Clinic {
  id            String   @id @default(uuid()) @db.Uuid
  name          String
  slug          String   @unique
  neighborhoodId String? @db.Uuid
  addressLine1  String?
  city          String   @default("Tijuana")
  state         String   @default("BC")
  country       String   @default("MX")
  phone         String?
  whatsapp      String?
  websiteUrl    String?
  googleMapsUrl String?
  yelpUrl       String?
  isPublished   Boolean  @default(false)
  isFeatured    Boolean  @default(false)
  featuredRank  Int?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  events        Event[]
  savedClinics  SavedClinic[]
  reviews       Review[]
  neighborhood  Neighborhood? @relation(fields: [neighborhoodId], references: [id], onDelete: SetNull)
  clinicProcedures ClinicProcedure[]

  @@index([slug])
  @@index([neighborhoodId])
  @@index([isPublished])
  @@index([isFeatured, featuredRank])
}

model Neighborhood {
  id          String   @id @default(uuid()) @db.Uuid
  name        String
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  clinics     Clinic[]
}

model Procedure {
  id              String   @id @default(uuid()) @db.Uuid
  name            String
  slug            String   @unique
  description     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  clinicProcedures ClinicProcedure[]
}

model ClinicProcedure {
  clinicId     String   @db.Uuid
  procedureId  String   @db.Uuid
  createdAt    DateTime @default(now())
  clinic       Clinic   @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  procedure    Procedure @relation(fields: [procedureId], references: [id], onDelete: Cascade)

  @@id([clinicId, procedureId])
  @@index([clinicId])
  @@index([procedureId])
}

enum ReviewStatus {
  PENDING
  PUBLISHED
  REJECTED
}

model Event {
  id        String   @id @default(uuid()) @db.Uuid
  sessionId String?
  clinicId  String?  @db.Uuid
  eventName String
  metadata  Json?
  createdAt DateTime @default(now())
  clinic    Clinic?  @relation(fields: [clinicId], references: [id], onDelete: SetNull)

  @@index([sessionId])
  @@index([clinicId])
}

model SavedClinic {
  id        String   @id @default(uuid()) @db.Uuid
  sessionId String
  clinicId  String   @db.Uuid
  createdAt DateTime @default(now())
  clinic    Clinic   @relation(fields: [clinicId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([clinicId])
  @@unique([sessionId, clinicId])
}

model Review {
  id              String       @id @default(uuid()) @db.Uuid
  clinicId        String       @db.Uuid
  sessionId       String
  status          ReviewStatus @default(PENDING)
  ratingOverall   Int
  procedure       String?
  visitMonth      Int?
  visitYear       Int?
  headline        String?
  body            String
  rejectionReason String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  publishedAt     DateTime?
  clinic          Clinic       @relation(fields: [clinicId], references: [id], onDelete: Cascade)

  @@index([clinicId])
  @@index([sessionId])
  @@index([status])
  @@unique([clinicId, sessionId])
}

model SessionProfile {
  sessionId         String   @id
  email             String?
  emailOptIn        Boolean  @default(false)
  emailCapturedAt   DateTime?
  unsubscribedAt    DateTime?
  unsubscribeToken  String   @unique
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  emailLogs         EmailLog[]
}

model EmailLog {
  id        String   @id @default(uuid()) @db.Uuid
  sessionId String
  email     String
  template  String
  status    String
  error     String?
  createdAt DateTime @default(now())
  session   SessionProfile @relation(fields: [sessionId], references: [sessionId], onDelete: Cascade)

  @@index([sessionId])
}

model RateLimitCounter {
  id          String   @id @default(uuid()) @db.Uuid
  key         String
  action      String
  windowStart DateTime
  count       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([key, action, windowStart])
  @@index([key, action])
}
